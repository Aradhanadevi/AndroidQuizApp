<!-- res/drawable/button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background for a smooth transition -->
    <gradient
        android:startColor="#FF6200EE"
        android:endColor="#D500F9"
        android:angle="45"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Shadow effect to give depth -->
    <solid android:color="#FF6200EE" />
    <stroke
        android:color="#4CAF50" android:width="2dp" />   <!-- Border width -->

    <!-- Optional: Add padding if necessary -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
